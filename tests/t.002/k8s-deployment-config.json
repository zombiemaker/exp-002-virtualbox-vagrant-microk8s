	"deployment_regions": {
	  "regions": [
		{
		  "region": "us-east",
		  "availability_zones": [
			"az-1",
			"az-2",
			"az-3"
		  ]
		},
		{
		  "region": "us-west",
		  "availability_zones": [
			"az-a",
			"az-b",
			"az-c"
		  ]
		}
	  ],
