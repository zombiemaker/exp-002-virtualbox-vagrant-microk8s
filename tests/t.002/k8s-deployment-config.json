	"api_version": "v0.1.0",
	"virtual_resource_provider": {
	  "type": "virtualbox"
	},
	"virtual_resource_provider_programming_platform": {
	  "type": "hashicorp-vagrant",
	  "hashicorp_vagrant_config": {
		"shared_directory_host_path": ".runtime",
		"shared_directory_vm_path": "/vagrant/.runtime"
	  }
